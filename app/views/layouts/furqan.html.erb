<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en" class="js">
<head>
  <meta name="generator" content= "HTML Tidy for Linux/x86 (vers 11 February 2007), see www.w3.org" />
  <meta http-equiv="Content-Type" content="text/html; charset=us-ascii" />

  <title><%= page_title %></title>
  <%= stylesheet_link_tag :all %><%= stylesheet_link_tag 'layout' %><%= javascript_include_tag :defaults %><%= csrf_meta_tag %>
  <link rel="shortcut icon" href= "http://www.ridepdw.com/sites/all/themes/pdw/favicon.ico" type="image/x-icon" />
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" type= "text/javascript"> </script>
  <script src="javascripts/nivo-slider/jquery.nivo.slider.js" type="text/javascript"> </script>
</head>

<body class= "not-logged-in front full-node node-type-page layout-main postscript-first-middle section-home browser-ie">
<div id="wrapper" class="clearfix">
    <div id="header" class="clearfix" style="border-top-left-radius: 20px 20px; border-top-right-radius: 20px 20px;">
      <div id="header-inner">
        <div id="basmalah"><%= image_tag('/images/basmalah.png') %>
        </div>
        <div style="position:absolute; z-index:100; right:10px;">
          <%= select_month 14, :prompt => "Prayer Schedule" %>
          <%= javascript_tag do %>
            $('#date_month').change(function(){
               document.location.href = '/download/' + this.options[this.selectedIndex].text + ".pdf";
            });
          <% end %>
        </div>
        
        <div id="logo">
        </div>

      </div><!--/ header-inner -->
    </div><!-- /header -->

    <%= render :partial => 'shared/menu'  %>
    <% if request.url == root_url %> 
      <div id="banner" class="clearfix">
        <div id="name">
          <%= image_tag logo %>
        </div>
        <div id="photo">
          <%= render :partial => 'shared/slider' %>
        </div>
      </div>
      <% end %>

      <div id="main" class="clearfix" >
            <div id="content-wrapper" class="clearfix">
              <div id="content-inner" class="clearfix">
                <div id="content">
                <%= yield :sidebar %>
                <%= yield %>
                  </div><!-- /content -->
                </div><!-- /content-inner -->
              </div><!-- /content-wrapper -->
        </div><!-- /main -->

      <%= yield :featured %>
        <div id="footer" class="clearfix">
          <div id="footer-wrapper" class="clearfix">
            <div id="footer-first">
            </div><!-- /footer-first -->

            <div id="footer-last">
            <form action="https://www.paypal.com/cgi-bin/webscr" method="post">
              <input type="hidden" name="cmd" value="_s-xclick">
              <input type="hidden" name="hosted_button_id" value="8KMWVQU9NBFW8">
              <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
              <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
            </form>
            </div><!-- /footer-last -->
          </div><!-- /footer-wrapper -->
        </div><!-- /footer -->
      </div><!-- /wrapper -->
    </div><!-- /page -->

  </div>
</body>
</html>

